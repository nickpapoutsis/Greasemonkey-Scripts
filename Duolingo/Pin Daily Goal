// ==UserScript==
// @name         Duolingo Pin Daily Goal
// @namespace    nickpapoutsis
// @version      0.1
// @description  Pins Daily Goal to the top right corner on Duolingo so it's always visible when scrolling up or down.
// @author       nickpapoutsis
// @match        https://www.duolingo.com/
// @grant        GM_addStyle
// @icon         data:image/png;base64,
// ==/UserScript==

(function() {
    'use strict';

    var sidebarClasses = document.getElementsByClassName("_2_lzu")[0].childNodes;

    sidebarClasses[2].parentNode.insertBefore(sidebarClasses[2], sidebarClasses[0]);

    GM_addStyle('._21w25 { position: fixed; z-index: 101; }');

    GM_addStyle('.aFqnr { margin-top: 40em; }');

    var practiceButton = document.getElementsByClassName("_2G3uv")[0];

    practiceButton.insertAdjacentHTML('afterend', '<div class= "donate"><a href="https://www.paypal.me/NickPapoutsis" target = _blank>Donate :)</a></div>');

    GM_addStyle('.donate { margin-top: 15px; text-align: right; margin-bottom: -25px; margin-right: -15px; }');

    GM_addStyle('.donate a { text-decoration: underline; color: blue; letter-spacing: .06em; }');

})();
